<%- include('../partials/headers', { title: "Banner Details" }) %>
<%- include('../partials/sidebar', { title: "Banners" }) %>

<div class="content-wrapper">

  <section class="content-header">
    <div class="container-fluid d-flex justify-content-between align-items-center">
      <h1>Banner Details</h1>
      <a href="/admin/banners" class="btn btn-secondary btn-sm">Back</a>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">

      <div class="card card-primary card-outline shadow-sm">

        <div class="card-body">

          <!-- Title -->
          <h3 class="mb-3">
            <%= banner.title %>
            <% if (banner.is_active) { %>
              <span class="badge bg-success ms-2">Active</span>
            <% } else { %>
              <span class="badge bg-danger ms-2">Inactive</span>
            <% } %>
          </h3>

          <!-- Banner Preview -->
          <div class="mb-4">
            <h5 class="mb-2">Banner Preview:</h5>

        
              <video src="<%= banner.banner %>" width="300" controls class="rounded shadow-sm"></video>
           
          </div>

          <!-- Details Table -->
          <table class="table table-bordered w-50">
            <tr>
              <th width="30%">Title</th>
              <td><%= banner.title %></td>
            </tr>
            <tr>
              <th>Status</th>
              <td><%= banner.is_active ? "Active" : "Inactive" %></td>
            </tr>
            <tr>
              <th>Created At</th>
              <td><%= banner.createdAt.toLocaleString() %></td>
            </tr>
            <tr>
              <th>Updated At</th>
              <td><%= banner.updatedAt.toLocaleString() %></td>
            </tr>
          </table>

        </div>

        <div class="card-footer text-end">
          <a href="/admin/banners/edit/<%= banner.id %>" class="btn btn-warning">Edit Banner</a>
        </div>

      </div>

    </div>
  </section>

</div>

<%- include('../partials/footer') %>
