<%- include('../partials/headers', { title: "Add Class Session" }) %>
<%- include('../partials/sidebar', { title: "Class Sessions" }) %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid d-flex justify-content-between align-items-center">
      <h1>Add Class Session</h1>
      <a href="/admin/class-sessions" class="btn btn-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Back
      </a>
    </div>
  </section>

  <% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger mx-3">
      <ul>
        <% errors.forEach(err => { %>
          <li><%= err %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <section class="content">
    <div class="container-fluid">
      <div class="card card-outline card-primary shadow-sm">
        <div class="card-header">
          <h3 class="card-title">New Class Session</h3>
        </div>

        <form action="/admin/class-sessions/add" method="POST">
          <div class="card-body row g-3">

            <!-- Class Type -->
         <div class="col-md-4">
  <label>Class Type</label>
  <select name="class_type_id" class="form-select" required id="classTypeSelect">
    <option value="">Select Class Type</option>
    <% classTypes.forEach(ct => { %>
      <option value="<%= ct.id %>"><%= ct.name %></option>
    <% }) %>
  </select>
</div>



            <!-- Instructor -->
       <div class="col-md-4">
  <label>Instructor</label>
  <select name="instructor_id" class="form-select" required id="instructorSelect">
    <option value="">Select Instructor</option>

    <% instructors.forEach(i => { %>
      <option 
        value="<%= i.id %>"
        data-class-type="<%= i.service_id %>">
        <%= i.first_name %> <%= i.last_name %>
      </option>
    <% }) %>
  </select>
</div>



      

            <!-- Title -->
            <div class="col-md-6">
              <label>Class Title</label>
              <input type="text" name="title" class="form-control" required />
            </div>

            <!-- Capacity -->
            <div class="col-md-3">
              <label>Total Capacity</label>
              <input type="number" name="capacity" min="1" class="form-control" required />
            </div>

            <!-- Duration -->
            <div class="col-md-3">
              <label>Duration (minutes)</label>
              <input type="number" name="duration_minutes" min="1" class="form-control" required />
            </div>

            <!-- Date -->
            <div class="col-md-3">
              <label>Class Date</label>
              <input type="date" name="class_date" class="form-control" required />
            </div>

            <!-- Time -->
            <div class="col-md-3">
              <label>Class Time</label>
              <input type="time" name="class_time" class="form-control" required />
            </div>

            <!-- Meeting Link -->
            <div class="col-md-6">
              <label>Meeting Link</label>
              <input type="url" name="meeting_link" class="form-control" required />
            </div>

            <!-- Description -->
            <div class="col-md-12">
              <label>Description</label>
              <textarea name="description" rows="4" class="form-control" required></textarea>
            </div>

            <!-- Status -->
            <div class="col-md-3">
              <label>Status</label>
              <select name="status" class="form-select">
                <option value="scheduled">Scheduled</option>
                <option value="completed">Completed</option>
                <option value="cancelled">Cancelled</option>
              </select>
            </div>

          </div>

          <div class="card-footer text-end">
            <button type="reset" class="btn btn-secondary">Reset</button>
            <button type="submit" class="btn btn-primary">Add Session</button>
          </div>
        </form>
      </div>
    </div>
  </section>
</div>

<script>
  const classTypeSelect = document.getElementById("classTypeSelect");
  const instructorSelect = document.getElementById("instructorSelect");

  const instructorOptions = Array.from(instructorSelect.options);

  classTypeSelect.addEventListener("change", function () {
    const selectedClassTypeId = this.value;

    instructorSelect.innerHTML = '<option value="">Select Instructor</option>';

    if (!selectedClassTypeId) return;

    instructorOptions.forEach(option => {
      if (option.dataset.classType === selectedClassTypeId) {
        instructorSelect.appendChild(option);
      }
    });
  });
</script>



<%- include('../partials/footer') %>
