<%- include('../partials/headers', { title: "View Class Session" }) %>
<%- include('../partials/sidebar', { title: "Class Sessions" }) %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid d-flex justify-content-between align-items-center">
      <h1>Class Session Details</h1>
      <a href="/admin/class-sessions" class="btn btn-secondary btn-sm"><i class="bi bi-arrow-left"></i> Back</a>
    </div>
  </section>

  <% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger mx-3">
      <ul><% errors.forEach(err => { %><li><%= err %></li><% }); %></ul>
    </div>
  <% } %>

  <% if (session) { %>
  <section class="content">
    <div class="container-fluid">
      <div class="card card-outline card-primary shadow-sm">
        <div class="card-header">
          <h3 class="card-title">Session #<%= session.id %></h3>
        </div>
        <div class="card-body">
          <table class="table table-striped table-bordered">
            <tbody>
              <tr><th>Class Type</th><td><%= session.classType?.name || '-' %></td></tr>
              <tr><th>Instructor</th><td><%= session.instructor?.first_name %> <%= session.instructor?.last_name %></td></tr>
              <tr><th>Studio</th><td><%= session.studio?.name || '-' %></td></tr>
              <tr><th>Capacity</th><td><%= session.capacity %></td></tr>
              <tr><th>Duration</th><td><%= session.duration_minutes %> mins</td></tr>
              <tr><th>Start Time</th><td><%= new Date(session.start_time).toLocaleString() %></td></tr>
              <tr><th>End Time</th><td><%= new Date(session.end_time).toLocaleString() %></td></tr>
              <tr><th>Price</th><td>$<%= session.price %></td></tr>
              <tr><th>Status</th><td><%= session.status %></td></tr>
              <tr><th>Created</th><td><%= new Date(session.createdAt).toLocaleString() %></td></tr>
              <tr><th>Updated</th><td><%= new Date(session.updatedAt).toLocaleString() %></td></tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
  <% } else { %>
    <div class="alert alert-warning text-center mx-3">Class session not found.</div>
  <% } %>
</div>

<%- include('../partials/footer') %>
