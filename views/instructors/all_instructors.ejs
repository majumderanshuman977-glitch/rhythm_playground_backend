<%- include('../partials/headers', { title: "Manage Instructors" }) %>
<%- include('../partials/sidebar', { title: "Instructors" }) %>

<div class="content-wrapper">
    <!-- Page Header -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2 align-items-center">
                <div class="col-sm-6">
                    <h1 class="m-0">Manage Instructors</h1>
                </div>
                <div class="col-sm-6 text-end">
                    <a href="/admin/instructors" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle"></i> Add Instructor
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Success Message -->
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success text-center mx-3">
            <%= success %>
        </div>
    <% } %>

    <!-- Error Messages -->
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="alert alert-danger mx-3">
            <ul class="mb-0">
                <% errors.forEach(err => { %>
                    <li><%= err %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>

    <!-- Main Content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card card-outline card-primary shadow-sm">
                <div class="card-header">
                    <h3 class="card-title">Instructor List</h3>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-bordered table-striped table-hover align-middle">
                        <thead class="table-primary text-center">
                            <tr>
                                <th>#</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Experience</th>
                                <th>Specialization</th>
                                <th>Rating</th>
                                <th>Status</th>
                                <th style="width: 200px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (instructors && instructors.length > 0) { %>
                                <% instructors.forEach((inst, index) => { %>
                                    <tr>
                                        <td class="text-center"><%= index + 1 %></td>

                                        <td class="text-center">
                                            <% if (inst.image) { %>
                                                <img src="<%= baseUrl %>/uploads/admin/instructor_images/<%= inst.image %>" alt="Instructor"
                                                    class="rounded-circle border" width="60" height="60">
                                            <% } else { %>
                                                <img src="/images/default-avatar.png" alt="Default"
                                                    class="rounded-circle border" width="60" height="60">
                                            <% } %>
                                        </td>

                                        <td><%= inst.first_name %> <%= inst.last_name %></td>
                                        <td><%= inst.email %></td>
                                        <td><%= inst.phone || 'N/A' %></td>
                                        <td class="text-center"><%= inst.experience_years || 0 %> yrs</td>
                                        <td><%= inst.specialization || 'N/A' %></td>
                                        <td class="text-center"><%= inst.rating || 0 %> ‚≠ê</td>
                                        <td class="text-center">
                                            <% if (inst.status === 'active') { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                            <% } %>
                                        </td>

                                        <td class="text-center">
                                            <a href="/admin/instructors/<%= inst.id %>" class="btn btn-info btn-sm me-1">
                                                <i class="bi bi-eye"></i> Show
                                            </a>
                                            <a href="/admin/instructors/edit/<%= inst.id %>"
                                                class="btn btn-warning btn-sm me-1">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <button class="btn btn-danger btn-sm delete-btn" data-id="<%= inst.id %>">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="10" class="text-center text-muted py-4">
                                        No instructors found
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const deleteButtons = document.querySelectorAll('.delete-btn');

        deleteButtons.forEach(button => {
            button.addEventListener('click', async () => {
                const id = button.getAttribute('data-id');
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then(result => {
                    if (result.isConfirmed) {
                        fetch(`/admin/instructors/delete/${id}`, { method: 'DELETE' })
                            .then(res => res.json())
                            .then(data => {
                                if (data.success) {
                                    Swal.fire('Deleted!', data.message, 'success');
                                    setTimeout(() => window.location.reload(), 1000);
                                } else {
                                    Swal.fire('Error', data.message, 'error');
                                }
                            })
                            .catch(() => Swal.fire('Error', 'Something went wrong', 'error'));
                    }
                });
            });
        });
    });
</script>

<%- include('../partials/footer') %>
