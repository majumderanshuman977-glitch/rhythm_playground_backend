<%- include('../partials/headers', { title: "Edit Instructor" }) %>
<%- include('../partials/sidebar', { title: "Instructors" }) %>

<div class="content-wrapper">
  <!-- Page Header -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2 align-items-center">
        <div class="col-sm-6">
          <h1>Edit Instructor</h1>
        </div>
        <div class="col-sm-6 text-end">
          <a href="/admin/instructors/list" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Edit Form -->
  <section class="content">
    <div class="container-fluid">
      <div class="card card-outline card-primary shadow-sm">
        <div class="card-body">
          <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% errors.forEach(err => { %>
                  <li><%= err %></li>
                <% }) %>
              </ul>
            </div>
          <% } %>

       <% if (success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (errors && errors.length > 0) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <ul class="mb-0">
      <% errors.forEach(err => { %>
        <li><%= err %></li>
      <% }) %>
    </ul>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>


          <form action="/admin/instructors/update/<%= instructor.id %>" 
                method="POST" 
                enctype="multipart/form-data">

            <div class="row">
              <!-- First Name -->
              <div class="col-md-6 mb-3">
                <label class="form-label">First Name</label>
                <input type="text" name="first_name" class="form-control" 
                       value="<%= instructor.first_name %>" required>
              </div>

              <!-- Last Name -->
              <div class="col-md-6 mb-3">
                <label class="form-label">Last Name</label>
                <input type="text" name="last_name" class="form-control" 
                       value="<%= instructor.last_name %>" required>
              </div>

              <!-- Email -->
              <div class="col-md-6 mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" 
                       value="<%= instructor.email %>" required>
              </div>

              <!-- Phone -->
              <div class="col-md-6 mb-3">
                <label class="form-label">Phone</label>
                <input type="text" name="phone" class="form-control" 
                       value="<%= instructor.phone || '' %>">
              </div>

              <!-- Experience -->
              <div class="col-md-6 mb-3">
                <label class="form-label">Experience (Years)</label>
                <input type="number" name="experience_years" class="form-control" 
                       value="<%= instructor.experience_years || '' %>" min="0">
              </div>

              <!-- Specialization -->
              <div class="col-md-6 mb-3">
  <label class="form-label">Service</label>
  <select name="service_id" class="form-select" required>
    <option value="">-- Select Service --</option>
    <% classTypes.forEach(service => { %>
      <option value="<%= service.id %>"
        <%= instructor.service_id === service.id ? "selected" : "" %>>
        <%= service.name %>
      </option>
    <% }) %>
  </select>
</div>


              <!-- Bio -->
              <div class="col-md-12 mb-3">
                <label class="form-label">Bio</label>
                <textarea name="bio" rows="4" class="form-control"><%= instructor.bio || '' %></textarea>
              </div>

              <!-- Rating -->
              <div class="col-md-6 mb-3">
                <label class="form-label">Rating</label>
                <input type="number" step="0.1" name="rating" class="form-control" 
                       value="<%= parseFloat(instructor.rating || 0).toFixed(1) %>">
              </div>

              <!-- Status -->
              <div class="col-md-6 mb-3">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                  <option value="active" <%= instructor.status === "active" ? "selected" : "" %>>Active</option>
                  <option value="inactive" <%= instructor.status === "inactive" ? "selected" : "" %>>Inactive</option>
                </select>
              </div>

              <!-- Current Image -->
              <div class="col-md-6 mb-3">
                <label class="form-label">Current Image</label><br>
                <% if (instructor.image) { %>
                  <img src="<%= baseUrl %>/uploads/admin/instructor_images/<%= instructor.image %>" 
                       alt="Instructor Image" class="img-thumbnail" style="max-width: 150px;">
                <% } else { %>
                  <p class="text-muted">No image uploaded</p>
                <% } %>
              </div>

              <!-- Upload New Image -->
              <div class="col-md-6 mb-3">
                <label class="form-label">Upload New Image</label>
                <input type="file" name="image" accept="image/*" class="form-control">
              </div>
            </div>

            <div class="text-end mt-3">
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Update Instructor
              </button>
              <a href="/admin/instructors/list" class="btn btn-secondary">
                Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('../partials/footer') %>
