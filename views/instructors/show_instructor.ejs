<%- include('../partials/headers', { title: "Instructor Details" }) %>
<%- include('../partials/sidebar', { title: "Instructors" }) %>

<div class="content-wrapper">
  <!-- Page Header -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2 align-items-center">
        <div class="col-sm-6">
          <h1 class="m-0">Instructor Details</h1>
        </div>
        <div class="col-sm-6 text-end">
          <a href="/admin/instructors/list" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left-circle"></i> Back to List
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="content">
    <div class="container-fluid">
      <div class="card card-outline card-primary shadow-sm">
        <div class="card-header">
          <h3 class="card-title"><i class="bi bi-person-circle"></i> Instructor Information</h3>
        </div>

        <div class="card-body">
          <% if (instructor) { %>
            <div class="row align-items-start">
              
              <!-- Profile Image -->
              <div class="col-md-3 text-center mb-4">
                <% if (instructor.image) { %>
                  <img src="<%= baseUrl %>/uploads/admin/instructor_images/<%= instructor.image %>" 
                       alt="Instructor Image" 
                       class="rounded-circle border shadow-sm" 
                       width="150" height="150">
                <% } else { %>
                  <img src="https://via.placeholder.com/150?text=No+Image" 
                       alt="No Image" 
                       class="rounded-circle border shadow-sm" 
                       width="150" height="150">
                <% } %>
                <h5 class="mt-3"><%= instructor.first_name %> <%= instructor.last_name %></h5>
                <p class="text-muted mb-0"><%= instructor.specialization || "N/A" %></p>
              </div>

              <!-- Details -->
              <div class="col-md-9">
                <div class="row">

                  <div class="col-md-6 mb-3">
                    <label class="fw-bold">Email:</label>
                    <p class="form-control-plaintext border-bottom">
                      <%= instructor.email %>
                    </p>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="fw-bold">Phone:</label>
                    <p class="form-control-plaintext border-bottom">
                      <%= instructor.phone || "N/A" %>
                    </p>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="fw-bold">Experience (Years):</label>
                    <p class="form-control-plaintext border-bottom">
                      <%= instructor.experience_years || 0 %> Years
                    </p>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="fw-bold">Rating:</label>
                    <p class="form-control-plaintext border-bottom">
  <%= (instructor && !isNaN(parseFloat(instructor.rating))) ? parseFloat(instructor.rating).toFixed(1) : "0.0" %> ‚≠ê
</p>

                  </div>

                  <div class="col-md-12 mb-3">
                    <label class="fw-bold">Bio:</label>
                    <p class="form-control-plaintext border rounded p-2 bg-light">
                      <%= instructor.bio || "No bio provided." %>
                    </p>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="fw-bold">Status:</label>
                    <p>
                      <% if (instructor.status === "active") { %>
                        <span class="badge bg-success">Active</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Inactive</span>
                      <% } %>
                    </p>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="fw-bold">Created At:</label>
                    <p class="form-control-plaintext border-bottom">
                      <%= new Date(instructor.createdAt).toLocaleString() %>
                    </p>
                  </div>

                </div>
              </div>
            </div>
          <% } else { %>
            <div class="alert alert-warning">Instructor not found.</div>
          <% } %>
        </div>

        <div class="card-footer text-end">
          <a href="/admin/instructors/edit/<%= instructor.id %>" class="btn btn-warning btn-sm">
            <i class="bi bi-pencil-square"></i> Edit
          </a>
          <button class="btn btn-danger btn-sm delete-btn" data-id="<%= instructor.id %>">
            <i class="bi bi-trash"></i> Delete
          </button>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const deleteBtn = document.querySelector('.delete-btn');
    if (!deleteBtn) return;

    deleteBtn.addEventListener('click', () => {
      const id = deleteBtn.getAttribute('data-id');
      Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
      }).then((result) => {
        if (result.isConfirmed) {
          fetch(`/admin/instructors/delete/${id}`, { method: 'DELETE' })
            .then(res => res.json())
            .then(data => {
              if (data.success) {
                Swal.fire('Deleted!', data.message, 'success');
                setTimeout(() => window.location.href = '/admin/instructors/list', 1000);
              } else {
                Swal.fire('Error', data.message, 'error');
              }
            })
            .catch(() => Swal.fire('Error', 'Something went wrong', 'error'));
        }
      });
    });
  });
</script>

<%- include('../partials/footer') %>
