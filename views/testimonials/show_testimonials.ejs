<%- include('../partials/headers', { title: "Testimonial Details" }) %>
<%- include('../partials/sidebar', { title: "Testimonials" }) %>

<div class="content-wrapper">

  <!-- Page Header -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2 align-items-center">
        <div class="col-sm-6">
          <h1 class="m-0">Testimonial Details</h1>
        </div>
        <div class="col-sm-6 text-end">
          <a href="/admin/testimonials/list" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left-circle"></i> Back to List
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="content">
    <div class="container-fluid">

      <div class="card card-outline card-primary shadow-sm">
        <div class="card-header">
          <h3 class="card-title"><i class="bi bi-chat-square-quote"></i> Testimonial Information</h3>
        </div>

        <div class="card-body">

          <% if (testimonial) { %>
            <div class="row align-items-start">

              <!-- Profile Image -->
              <div class="col-md-3 text-center mb-4">
                <% if (testimonial.image) { %>
                  <img src="<%= baseUrl %>/uploads/admin/testimonials/<%= testimonial.image %>"
                       alt="Client Image" class="rounded-circle border shadow-sm"
                       width="150" height="150">
                <% } else { %>
                  <img src="https://via.placeholder.com/150?text=No+Image"
                       alt="No Image" class="rounded-circle border shadow-sm"
                       width="150" height="150">
                <% } %>

                <h5 class="mt-3"><%= testimonial.client_name %></h5>
                <p class="text-muted mb-0"><%= testimonial.client_role || "N/A" %></p>
              </div>

              <!-- Details -->
              <div class="col-md-9">
                <div class="row">

                  <div class="col-md-6 mb-3">
                    <label class="fw-bold">Client Name:</label>
                    <p class="form-control-plaintext border-bottom">
                      <%= testimonial.client_name %>
                    </p>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="fw-bold">Position/Role:</label>
                    <p class="form-control-plaintext border-bottom">
                      <%= testimonial.client_role || "N/A" %>
                    </p>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="fw-bold">Rating:</label>
                    <p class="form-control-plaintext border-bottom">
                      <%= (testimonial && !isNaN(parseFloat(testimonial.rating))) ? parseFloat(testimonial.rating).toFixed(1) : "0.0" %> ‚≠ê
                    </p>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="fw-bold">Status:</label>
                    <p>
                      <% if (testimonial.is_active) { %>
                        <span class="badge bg-success">Active</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Inactive</span>
                      <% } %>
                    </p>
                  </div>

                  <div class="col-md-12 mb-3">
                    <label class="fw-bold">Review:</label>
                    <p class="form-control-plaintext border rounded p-2 bg-light">
                      <%= testimonial.review %>
                    </p>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="fw-bold">Created At:</label>
                    <p class="form-control-plaintext border-bottom">
                      <%= new Date(testimonial.createdAt).toLocaleString() %>
                    </p>
                  </div>

                </div>
              </div>
            </div>
          <% } else { %>
            <div class="alert alert-warning">Testimonial not found.</div>
          <% } %>

        </div>

        <!-- Footer Buttons -->
        <div class="card-footer text-end">
          <a href="/admin/testimonials/edit/<%= testimonial.id %>" class="btn btn-warning btn-sm">
            <i class="bi bi-pencil-square"></i> Edit
          </a>

          <button class="btn btn-danger btn-sm delete-btn" data-id="<%= testimonial.id %>">
            <i class="bi bi-trash"></i> Delete
          </button>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const deleteBtn = document.querySelector('.delete-btn');
    if (!deleteBtn) return;

    deleteBtn.addEventListener('click', () => {
      const id = deleteBtn.getAttribute('data-id');
      
      Swal.fire({
        title: 'Are you sure?',
        text: "This action cannot be undone!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
      }).then(result => {
        if (result.isConfirmed) {
          fetch(`/admin/testimonials/delete/${id}`, { method: 'DELETE' })
            .then(res => res.json())
            .then(data => {
              if (data.success) {
                Swal.fire('Deleted!', data.message, 'success');
                setTimeout(() => window.location.href = '/admin/testimonials/list', 1000);
              } else {
                Swal.fire('Error', data.message, 'error');
              }
            })
            .catch(() => Swal.fire('Error', 'Something went wrong', 'error'));
        }
      });
    });
  });
</script>

<%- include('../partials/footer') %>
