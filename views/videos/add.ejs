<%- include('../partials/headers', { title: "Add Video" }) %>
<%- include('../partials/sidebar', { title: "Videos" }) %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <h1>Add New Video</h1>
    </div>
  </section>

  <% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger mx-3">
      <ul><% errors.forEach(err => { %><li><%= err %></li><% }) %></ul>
    </div>
  <% } %>

  <section class="content">
    <div class="container-fluid">
      <div class="card card-primary card-outline shadow-sm">
        <div class="card-header">
          <h3 class="card-title">Video Details</h3>
        </div>
        <form action="/admin/videos/add" method="POST" enctype="multipart/form-data">
          <div class="card-body row g-3">

            <div class="col-md-6">
              <label>Title <span class="text-danger">*</span></label>
              <input type="text" name="title" class="form-control" required />
            </div>

            <div class="col-md-6">
              <label>Instructor</label>
              <select name="instructor_id" class="form-select" required>
                <option value="">Select Instructor</option>
                <% instructors.forEach(inst => { %>
                  <option value="<%= inst.id %>"><%= inst.first_name %> <%= inst.last_name %> -> <%= inst.specialization %></option>
                <% }) %>
              </select>
            </div>

            <div class="col-md-6">
              <label>Class Type</label>
              <select name="class_id" class="form-select" required>
                <option value="">Select Class Type</option>
                <% classTypes.forEach(ct => { %>
                  <option value="<%= ct.id %>"><%= ct.name %></option>
                <% }) %>
              </select>
            </div>

           
            <div class="col-md-12">
              <label>Description</label>
              <textarea name="description" class="form-control" rows="3"></textarea>
            </div>

            <div class="col-md-6">
              <label>Upload Video <span class="text-danger">*</span></label>
              <input type="file" name="video" class="form-control" accept="video/*" required />
            </div>

            <div class="col-md-6">
              <label>Upload Thumbnail <span class="text-danger">*</span></label>
              <input type="file" name="thumbnail" class="form-control" accept="image/*" required />
            </div>

          </div>
          <div class="card-footer text-end">
            <button type="reset" class="btn btn-secondary me-2">Reset</button>
            <button type="submit" class="btn btn-primary">Upload Video</button>
          </div>
        </form>
      </div>
    </div>
  </section>
</div>

<%- include('../partials/footer') %>
